<section class="noti_write">
    <h2>공지사항 수정하기</h2>
    <% if(typeof errs !== "undefined") { %> <% errs.forEach((err)=>{%>
        <h4 style="color: red"><%=err.param%> : <%=err.msg%></h4>
        <% }) %> <% } %>
    <form method="POST" action="/updateMemo">
        <table>
            <tr>
                <td><label>제목 :</label></td>
                <td><input type="text" id="title" name="title"/><%=row.title%></td>
            </tr>
            <tr>
                <td><label>이름 :</label></td>
                <td><input type="text" id="name" name="name"/><%=row.name%></td>
            </tr>
            <tr>
                <td><label>비밀번호 :</label></td>
                <td><input type="password" id="pw" name="pw"/><%=row.pw%></td>
            </tr>
            <tr>
                <td>내용작성 :</td>
                <td>
                    <textarea cols="100" rows="10" id="content" name="content">
                        <%=row.content%>
                    </textarea>
                </td>
            </tr>
            <tr>
                <td>첨부파일 :</td>
                <td>
                    <input type="button" id="noti_file" value="첨부" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit"  value="저장" />
                </td>
            </tr>
        </table>
    </form>
</section>
